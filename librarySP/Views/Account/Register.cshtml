@model BusinessLayer.Models.UserDTO.RegisterViewModel
    <section>
        <h2 style="text-align:center" class="h3 mb-3 font-weight-normal">Регистрация</h2>
        <div class="row d-flex justify-content-center col-12">        
            <form method="post" asp-controller="Account" asp-action="Register">
            <div asp-validation-summary="ModelOnly"></div>
            <div class="form-group">
                <input asp-for="Email" placeholder="Email" class="form-control" required autofocus/>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="Name"  placeholder="Имя" class="form-control"/>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="Surname"  placeholder="Фамилия" class="form-control"/>
                <span asp-validation-for="Surname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="PhoneNum"  placeholder="Номер телефона" class="form-control"/>
                <span asp-validation-for="PhoneNum" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="Password"  placeholder="Пароль" class="form-control"/>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="PasswordConfirm"  placeholder="Повторите пароль" class="form-control"/>
                <span asp-validation-for="PasswordConfirm" class="text-danger"></span>
            </div>
            <div>
                <input type="submit" class="btn btn-lg btn-success btn-block" value="Зарегистрироваться" />
            </div>
        </form>
        </div>
    </section>