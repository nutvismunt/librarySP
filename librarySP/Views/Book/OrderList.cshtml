@model IEnumerable<librarySP.Database.Entities.Order>

<table class="table">
    <tr><td>Название книги</td><td>Автор</td><td>Количество</td></tr>
    @foreach (var item in Model)
    {

        <tr>
            <td>@item.Book.BookName</td>

            <td>@item.Book.BookAuthor</td>

            <td>@item.Amount</td>
            <td>
                <form asp-controller="Book" asp-action="DeleteOrder" asp-route-id="@item.OrderId" method="post">
                    <div class="form-group">
                        <input type="hidden" id="bookIdHolder" value="@item.Book.Id" name="bookIdHolder" />

                        <input type="submit" class="btn btn-default" value="Удалить" />
                    </div>
                </form>
            </td>
        </tr>

    }
</table>
<form asp-controller="Book" asp-action="SendOrder" method="post">
    <div class="form-group">
        <input type="submit" class="btn btn-default" value="Оформить бронь" />
    </div>
</form>
