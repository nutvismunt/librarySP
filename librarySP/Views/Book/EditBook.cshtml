@model BusinessLayer.Models.BookDTO.BookViewModel
@{
    ViewBag.Title = ("Редактирование книги {0}",Model.BookName);
}
<form asp-action="EditBook" asp-controller="Book" asp-route-id="@Model.Id" method="post" enctype="multipart/form-data">

    <div class="form-group">
        <label asp-for="BookName" class="control-label">Имя</label>
        <input type="text" asp-for="BookName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="BookAuthor" class="control-label">Автор</label>
        <input type="text" asp-for="BookAuthor" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="BookPublisher" class="control-label">Издатель</label>
        <input type="text" asp-for="BookPublisher" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="BookGenre" class="control-label">Жанр</label>
        <input type="text" asp-for="BookGenre" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="BookYear" class="control-label">Год выпуска</label>
        <input type="number" max="2071" min="1900" asp-for="BookYear" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="BookDescription" class="control-label">Описание</label>
        <textarea type="text" asp-for="BookDescription" class="form-control"> </textarea>
    </div>
    <div class="form-group">
        <label asp-for="BookInStock" class="control-label">Количество</label>
        <input  asp-for="BookInStock" class="form-control" />
    </div>

    <div class="form-group">
        <label class="control-label">Обложка</label>
        <input type="file" name="uploadedFile" /><br>
    </div>

    <div class="form-group">
        <input type="submit" value="Сохранить" class="btn btn-lg btn-success" />
    </div>
</form>