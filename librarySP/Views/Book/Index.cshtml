@model IEnumerable<BusinessLayer.Models.BookDTO.BookViewModel>

<form asp-controller="Book" asp-action="Index" style="text-align:left">
    <p style="width:100%">
        <input type="text" name="SearchString" style="width:90%">
        <input class="alert-info" type="submit" value="Поиск" style="width:auto" />
    </p>

    <a asp-action="CreateBook" asp-controller="Book"> Добавить книгу</a>
    <a asp-action="AddBookFromUrl" asp-controller="Book"> Добавить книгу по ISBN</a>

    <table class="table">
        <tr>
            <th>
                <button type="submit" style="border:0" value="@ViewBag.NameSort" name="boolSort"> Название</button>
            </th>
            <th>
                <button type="submit" style="border:0" value="@ViewBag.AuthorSort" name="boolSort"> Автор</button>
            </th>
            <th>В наличии</th>
        </tr>
        @foreach (var item in Model)
        {
            <input type="hidden" name="id" value="@item.Id" />
            <tr>
                <td><a asp-action="DetailsBook" asp-controller="Book" asp-route-id="@item.Id">@item.BookName </a></td>

                <td>@item.BookAuthor</td>

                <td>@item.BookInStock</td>

                <td>
                    <a asp-action="EditBook" asp-controller="Book" asp-route-id="@item.Id"> Изменить </a>

                    <a asp-action="DeleteBook" asp-controller="Book" asp-route-id="@item.Id"> Удалить </a>
                </td>

            </tr>

        }
    </table>
</form>