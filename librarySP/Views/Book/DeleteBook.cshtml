@model librarySP.Database.Entities.Book
@{
    ViewBag.Title = ("Удаление книги {0}",Model.BookName);
}

<div>
    <dl class="dl-horizontal">
        <dt>Название книги</dt>
        <dd>
            @Html.DisplayFor(model => model.BookName)
        </dd>

        <dt>Автор</dt>
        <dd>
            @Html.DisplayFor(model => model.BookAuthor)
        </dd>

        <dt>Издатель</dt>
        <dd>
            @Html.DisplayFor(model => model.BookPublisher)
        </dd>


        <dt>Жанр</dt>
        <dd>
            @Html.DisplayFor(model => model.BookGenre)
        </dd>

        <dt>Год выпуска</dt>
        <dd>
            @Html.DisplayFor(model => model.BookYear)
        </dd>

        <dt>Описание</dt>
        <dd>
            @Html.DisplayFor(model => model.BookDescription)
        </dd>

        <dt>Количество</dt>
        <dd>
            @Html.DisplayFor(model => model.BookInStock)
        </dd>
    </dl>

    <div>
        <form asp-controller="Book" asp-action="DeleteBook" method="post">
            <div class="form-group">
                <input type="submit" class="btn btn-default" value="Удалить" />
            </div>
        </form>
    </div>
</div>