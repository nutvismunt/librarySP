
@{
    ViewData["Title"] = "Home Page";
}
<form asp-controller="Home" asp-action="Index" style="text-align:right">
    <p>
        <input type="search" name="SearchString">
        <select name="search" asp-items="@(Html.GetEnumSelectList(typeof(DataLayer.enums.SearchBooks)))"></select>
        <input type="submit" value="Поиск" />
    </p>
</form>
<table class="table">
    <tr>
        <th>
            <a asp-action="Index" style="color:black" asp-route-sortOrder="@ViewData["NameSortParm"]">Название книги</a>
        </th>
        <th>
            <a asp-action="Index" style="color:black" asp-route-sortOrder="@ViewData["AuthorSortParm"]">Автор</a>
        </th>
        <th>В наличии</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td><a asp-action="DetailsBook" asp-controller="Home" asp-route-id="@item.Id">@item.BookName </a></td>

            <td>@item.BookAuthor</td>

            <td>@item.BookInStock</td>
        </tr>
    }
</table>
