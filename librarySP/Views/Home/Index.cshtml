@model IEnumerable<BusinessLayer.Models.BookDTO.BookViewModel>
@{
    ViewData["Title"] = "Главная";
}
<form asp-controller="Home" asp-action="Index" style="text-align:left">
    <p style="width:100%">
        <input type="text" name="SearchString" style="width:90%">
        <input class="alert-info" type="submit" value="Поиск" style="width:auto" />
    </p>
</form>
<table class="table">
    <tr>
        <th>   
            @Html.ActionLink("Название книги", "Index", new { boolSort = ViewBag.NameSort, sortBook = ViewBag.BookName })
        <th>
            @Html.ActionLink("Автор", "Index", new { boolSort = ViewBag.AuthorSort})
        </th>
        <th>В наличии</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td><a asp-action="DetailsBook" asp-controller="Home" asp-route-id="@item.Id">@item.BookName </a></td>

            <td>@item.BookAuthor</td>

            <td>@item.BookInStock</td>
        </tr>
    }
</table>
