@model IEnumerable<DataLayer.Entities.User>
@{
    ViewBag.Title = "Список пользователей";
}
<h2 style="text-align:left">Список пользователей</h2>
<hr />
<form asp-controller="Users" asp-action="Index">
    <p style="width:100%">
        <input type="text" name="SearchString" style="width:90%">
        <input class="alert-info" type="submit" value="Поиск" style="width:auto" />
    </p>
</form>
<table class="table-borderless" width="100%">
    <tr>
        <td><a style="color:black" asp-action="CreateUser">Добавить пользователя</a></td>
        <td style="text-align:right"><a style="color:black" asp-controller="Roles" asp-action="Index">Перейти к спику ролей</a></td>
    </tr>
</table>

<table class="table">
    <tr><th>Email</th><th>Имя</th><th>Фамилия</th><th>Телефон</th><th></th></tr>
    @foreach (var user in Model)
    {
        <tr>
            <td>@user.Email</td>
            <td>@user.Name</td>
            <td>@user.Surname</td>
            <td>@user.PhoneNumber</td>
            <td>
                <a class="btn btn-sm btn-primary" asp-controller="Roles" asp-action="EditRole" asp-route-userid="@user.Id">Права доступа</a>
                <a class="btn btn-sm btn-primary" asp-action="EditUser" asp-route-id="@user.Id">Изменить</a>
                <form asp-action="DeleteUser" asp-route-id="@user.Id" method="post">
                    <button type="submit" class="btn btn-sm btn-danger">
                        Удалить
                    </button>
                </form>

            </td>
        </tr>
    }
</table>
