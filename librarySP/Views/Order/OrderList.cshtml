@model IEnumerable<BusinessLayer.Models.OrderDTO.OrderViewModel>

    <a asp-controller="Order" asp-action="OrderListCompleted">Статус моих заказов</a>
    <table class="table">
        <tr><td>Название книги</td><td>Автор</td><td>Количество</td></tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>@item.BookName</td>

                <td>@item.BookAuthor</td>

                <td>@item.Amount</td>
                <td>
                    <form asp-controller="Order" asp-action="DeleteOrder" asp-route-id="@item.Id" method="post">
                        <div class="form-group">
                            <input type="hidden" id="bookIdHolder" value="@item.BookId" name="bookIdHolder" />

                            <input type="submit" class="btn btn-default" value="Удалить" />
                        </div>
                    </form>
                </td>
            </tr>

        }
    </table>
    <form asp-controller="Order" asp-action="SendOrder" method="post">
        <div class="form-group">
            <input type="submit" class="btn btn-default" value="Оформить бронь" />
        </div>
    </form>
