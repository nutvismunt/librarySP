
@model BusinessLayer.Models.OrderDTO.OrderViewModel

<form asp-action="Order" asp-controller="Order">

    <table class="table">

        <tr>
            <td>
                <div class="form-group">
                    <input type="hidden" value="@ViewBag.Data" name="bookId" />
                    <input type="number" asp-for="Amount" class="form-control" />
                </div>
            </td>
        </tr>

    </table>
    <input type="submit" value="Отправить" class="btn btn-default" />
</form>