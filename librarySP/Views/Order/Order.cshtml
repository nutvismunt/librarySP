
@model BusinessLayer.Models.OrderDTO.OrderViewModel

<form asp-action="Order" asp-controller="Order">
    <div class="row d-flex justify-content-center col-12">
        <table class="table" align="center">

            <tr>
                <td align="center" valign="middle">
                    <div class="form-group">

                        <input type="hidden" value="@ViewBag.Data" name="bookId" />

                        <label> Введите количество книг (не больше 4) </label><br />
                        <input type="number" value="1" max="4" min="1" asp-for="Amount" required autofocus />
                        <p class="text-danger">
                            @ViewBag.AmountError
                        </p>
                    </div>
                </td>
            </tr>

        </table>
        <div>
            @if (ViewBag.AmountError == null)
            {<input type="submit" value="Отправить" class="btn btn-lg btn-success btn-block" />}
        </div>
    </div>
</form>
<div class="row d-flex justify-content-center col-12">
    @if (ViewBag.AmountError != null)
    {<form asp-action="Order" asp-controller="Order" method="get">
            <input type="hidden" value="@ViewBag.Data" name="bookId" />
            <input type="submit" value="OK" class="btn btn-lg btn-success btn-block" />
        </form>
    }
</div>